{
  "manifest_version": 3,
  "name": "Universal Wallet Extension",
  "version": "1.0.0",
  "description": "A universal blockchain wallet extension supporting multiple networks",
  "permissions": [
    "storage",
    "activeTab",
    "scripting"
  ],
  "host_permissions": [
    "http://localhost:*/*"
  ],
  "action": {
    "default_popup": "popup.html"
  },
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "content_scripts": [
    {
      "matches": ["http://localhost:*/*"],
      "js": ["content.js"]
    }
  ]
} 